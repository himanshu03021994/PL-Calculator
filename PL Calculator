<div class="box">
    <h1>ðŸ’° Personal Loan Calculator</h1>

    <input type="number" id="amount" placeholder="Loan Amount (â‚¹)">
    <input type="number" id="rate" placeholder="Interest Rate (%)">
    <input type="number" id="time" placeholder="Loan Tenure (Years)">

    <button onclick="calculateLoan()">Calculate EMI</button>

    <div id="result"></div>
</div>

<script>
    function calculateLoan() {
        let P = document.getElementById("amount").value;
        let R = document.getElementById("rate").value;
        let T = document.getElementById("time").value;

        if (P === "" || R === "" || T === "") {
            document.getElementById("result").innerHTML = "Please fill all fields";
            return;
        }

        R = R / 12 / 100;
        T = T * 12;

        let EMI = (P * R * Math.pow(1 + R, T)) / (Math.pow(1 + R, T) - 1);

        document.getElementById("result").innerHTML =
            "Monthly EMI: â‚¹ " + EMI.toFixed(2);
    }
</script>

